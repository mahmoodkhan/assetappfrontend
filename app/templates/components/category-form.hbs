<div class="form-horizontal">
    <div class="form-group has-feedback {{if item.isValidCategory 'has-success'}}">
        <label class="col-sm-2 control-label">Name</label>
        <div class="col-sm-10">
            {{input type="text" value=item.category class="form-control" placeholder="The name of Asset Category"}}
            {{#if item.isValidCategory}}<span class="glyphicon glyphicon-ok form-control-feedback"></span>{{/if}}
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default" {{action 'buttonClicked' item}} disabled={{unless item.isValidCategory true}}>{{buttonLabel}}</button>
        </div>
    </div>
    {{#if error}}
        <div class="alert alert-danger">{{error}}</div>
    {{/if}}
</div>