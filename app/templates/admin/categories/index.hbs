<h2>Asset Categories</h2>

{{#link-to 'admin.categories.new'}}<a href="" class="btn btn-sm btn-primary">Add New</a>{{/link-to}}<br /><br />

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
    {{#each model as |category|}}
        <tr>
            <td>{{category.id}}</td>
            <td>{{category.category}}</td>
        </tr>
    {{/each}}
    </tbody>
</table>