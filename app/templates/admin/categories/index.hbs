<h2>Asset Categories</h2>

<div style="overflow: visible; position: relative;" class="table-responsive">
    {{#link-to 'admin.categories.new'}}<li class="btn btn-danger btn-new">+</li>{{/link-to}}
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Category</th>
                <th width="70px">Edit</th>
            </tr>
        </thead>
        <tbody>
        {{#each model as |category|}}
            <tr>
                <td>{{category.id}}</td>
                <td>{{category.category}}</td>
                <td>
                    {{#link-to 'admin.categories.edit' category.id}}<span class="glyphicon glyphicon-edit"></span>{{/link-to}}
                    <button class="btn-link" {{action 'deleteCategory' category}}><span style="color:red;" class="glyphicon glyphicon-trash"></span></button>
                    <!--
                    <a href="javascript.void(0);"><span {{action 'deleteCategory' category}} style="color:red;" class="glyphicon glyphicon-trash"></span></a>
                    -->
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>