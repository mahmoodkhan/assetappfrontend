<h2>Assets List</h2>

<div style="overflow: visible; position: relative;" class="table-responsive">
    {{#link-to 'assets.new'}}<li class="btn btn-danger btn-new">+</li>{{/link-to}}
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Country</th>
                <th {{action "sortBy" "no"}}>No</th>
                <th>Category</th>
                <th>Status</th>
                <th>Donor</th>
                <th>Brand</th>
                <th>Model</th>
                <th {{action "sortBy" "description"}}>Description</th>
                <th>Sno</th>
                <th width="70px">Edit</th>
            </tr>
        </thead>
        <tbody>
        {{#each sortedAssets as |asset|}}
            <tr>
                <td>{{asset.country.iso2}}</td>
                <td>{{asset.no}}</td>
                <td>{{asset.category.category}}</td>
                <td>{{asset.status.status}}</td>
                <td>{{asset.donor.donor}}</td>
                <td>{{asset.brand}}</td>
                <td>{{asset.model}}</td>
                <td>{{asset.description}}</td>
                <td>{{asset.sno1}}</td>
                <td>
                    {{#link-to 'assets.edit' asset.id }}<span class="glyphicon glyphicon-edit"></span>{{/link-to}}
                    <button class="btn-link" {{action 'deleteAsset' asset}}><span style="color:red;" class="glyphicon glyphicon-trash"></span></button>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>
